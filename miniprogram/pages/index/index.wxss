}

.scan-container {
   height: 122rpx;
   margin-top: 112rpx;
   display: flex;
   justify-content: center;
   align-items: center;
}

.scan-wrapper {
    position: relative;
    width: 342rpx;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #97C0BD;
    box-shadow: 0rpx 6rpx 10rpx rgba(0, 0, 0, 0.16);
    border-radius: 76rpx;
    overflow: hidden;
}

.scan-wrapper button {
    position: absolute;
    left: 0;
