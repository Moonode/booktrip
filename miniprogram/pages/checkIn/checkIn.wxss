.top-container {
    margin-top: 116rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.top-wrapper {
    width: 65%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.top-container image {
    width: 84rpx;
    height: 86rpx;
}

.top-text-container {
    font-weight: bold;
    font-size: 44rpx;
}

