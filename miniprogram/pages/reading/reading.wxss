page {
  background-color: #F1F1F1;
  overflow: hidden;
}

.back {
  position: absolute;
  width: 24rpx;
  height: 38rpx;
  top: 76rpx;
  left: 40rpx;
}

.background {
  position: absolute;
  width: 750rpx;
  height: 1334rpx;
  z-index: -100;
}

.circle-container {
  width: 510rpx;
  height: 510rpx;
  margin-top: 348rpx;
  margin-left: 122rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.time {
  font-size: 76rpx;
}

.name {
  font-size: 32rpx;
}

.text {
  font-size: 26rpx;
}

.progress-bg {
  position: absolute;
  width: 510rpx;
  height: 510rpx;
}

.progress {
  position: absolute;
  width: 510rpx;
  height: 510rpx;
}

.stop-container {
  margin-top: 122rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.stop-container image {
  width: 46rpx;
  height: 54rpx;
}

.experience-container {
  position: absolute;
  top: 1246rpx;
  width: 750rpx;
  height: 1000rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx -6rpx 10rpx rgba(0, 0, 0, 0.16);
  border-radius: 18rpx 18rpx 0rpx 0rpx;
  transition: top 1s ease-in-out;
}

.active {
  top: 350rpx;
  transition: top 0.5s ease-in-out;
}

.top-container {
  position: relative;
  height: 92rpx;
  width: 100%;
}

.top-line {
  position: absolute;
  left: 340rpx;
  top: 14rpx;
  width: 96rpx;
  height: 0rpx;
  border: 6rpx solid rgba(33, 40, 50, 1);
  opacity: 0.3;
  border-radius: 12rpx;
}

.top-title {
  position: absolute;
  left: 32rpx;
  top: 26rpx;
  font-size: 30rpx;
}

.top-page-input {
  position: absolute;
  right: 34rpx;
  top: 34rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}


.top-page-input input {
  width: 54rpx;
}

.top-page-input text {
  margin-left: 6rpx;
  font-size: 26rpx;
}

.top-bottom-line {
  position: absolute;
  bottom: 0;
  left: 12rpx;
  width: 718rpx;
  height: 0;
  border: 1rpx solid rgba(33, 40, 50, 1);
  opacity: 0.3;
}

.bottom-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.bottom-text-wrapper {
  width: 85%;
}

.bottom-text-wrapper textarea {
  margin-top: 26rpx;
}
